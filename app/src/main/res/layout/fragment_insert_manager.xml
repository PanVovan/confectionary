<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/manager_name_input"
        android:hint="Имя"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/inputform_text_margin"
        android:autofillHints="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/manager_surname_input"
        app:layout_constraintTop_toBottomOf="@id/manager_name_input"
        android:hint="Фамилия"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/manager_patronymic_input"
        app:layout_constraintTop_toBottomOf="@id/manager_surname_input"
        android:hint="Отчество"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/manager_phone_number"
        app:layout_constraintTop_toBottomOf="@id/manager_patronymic_input"
        android:hint="Телефон"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="phone" />

    <EditText
        android:id="@+id/manager_salary"
        app:layout_constraintTop_toBottomOf="@id/manager_phone_number"
        android:hint="Зарплата"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="number" />

    <EditText
        android:id="@+id/manager_experience"
        app:layout_constraintTop_toBottomOf="@id/manager_salary"
        android:hint="Опыт"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="number" />

    <EditText
        android:id="@+id/manager_sphere"
        app:layout_constraintTop_toBottomOf="@id/manager_experience"
        android:hint="Сфера"
        android:layout_margin="@dimen/inputform_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="no"
        android:inputType="text" />

    <Spinner
        android:id="@+id/choose_confectionarySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/manager_sphere"
        android:layout_margin="@dimen/inputform_text_margin"
        />


    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/add_item_btn"
        android:text="@string/btn_add_text"
        android:textSize="12sp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>